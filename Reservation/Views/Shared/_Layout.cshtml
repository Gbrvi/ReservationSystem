<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Reservation.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
@{
    var BodyClass = ViewData["RemovePadding"] != null && (bool)ViewData["RemovePadding"] ? "sem-padding" : "com-padding";
}
<body style="background: linear-gradient(to right, #ffffff, #c7e3fc) ;">
    <div id="page-container">
        <div class="offcanvas offcanvas-start " tabindex="-1" id="offcanvasMenu" data-bs-keyboard="false" data-bs-backdrop="true" >
            <div class="offcanvas-header ">
                <h6 class="offcanvas-title d-none d-sm-block" id="offcanvasTitle">Reserva de Salas</h6>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
            </div>
            <div class="offcanvas-body px-10 mx-10">
                <ul class="nav nav-pills flex-column mb-sm-auto ml-5 align-items-start" id="menu" >
                    <!-- Home -->
                    <li class="nav-item w-100 mb-2" style="justify-content: center; padding-left: 3.5rem !important">
                        <div class=" mb-3">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="fs-5 bi-house"></i>
                            <span class="ms-1 d-none d-sm-inline" style="justify-content: center">Home</span>
                        </a>
                        </div>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                            <li class="nav-item d-flex justify-content-center align-items-center w-100" >
                                <div>
                                <a class="nav-link text-truncate" asp-area="" asp-controller="Account" asp-action="Login"><button type="button" class="btn btn-outline-secondary btn-sm" style="font-size: 1.2rem">Login</button></a>
                            </div>
                            <div>
                                <a class="nav-link text-truncate" asp-area="" asp-controller="Account" asp-action="Register"><button type="button" class="btn btn-primary btn-sm" style="font-size: 1.2rem">Sign up</button></a>
                            </div>
                            </li>

                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Dashboard -->
                        <li class="nav-item" style="justify-content: center; padding-left: 4.5rem !important">
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link text-truncate ">
                                <i class="fs-5 bi-speedometer2    "></i>
                                <span class="ms-1 d-none d-sm-inline" >Conta</span>
                            </a>
                            <!-- Conta -->

                            <div class="collapse w-100" id="submenu1">
                                <ul class="nav flex-column ms-7 ">


                                    <li class="nav-item">
                                        <a class="nav-link text-truncate" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                    </li><!-- Log out -->

                                    <li class="nav-item">
                                        <a asp-controller="History" asp-action="Index" class="nav-link text-truncate" >
                                            <span>Histórico</span><!-- Histórico -->
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a asp-controller="Reserve" asp-action="UserReserves" class="nav-link text-truncate">
                                            <span>Minhas Reservas</span><!-- Histórico -->
                                        </a>
                                    </li>

                                </ul>
                            </div>

                        </li>
                    }

                    <li class="nav-item" style="justify-content: center; padding-left: 4.5rem !important">
                        <a class="nav-link text-truncate" asp-area="" asp-controller="Room" asp-action="Index">
                            <i class="fs-5 bi-table"></i>
                            <span class="ms-1 d-none d-sm-inline">Salas</span>
                        </a>
                    </li><!-- Salas -->


                    @if (User.Identity.IsAuthenticated){
                        @if (User.IsInRole("general") || User.IsInRole("admin"))
                        {
                            <li class="nav-item" style="justify-content: center; padding-left: 4.5rem !important">
                                <a class="nav-link text-truncate" asp-area="" asp-controller="Report" asp-action="Index">
                                    <i class="fs-5 bi-grid"></i>
                                    <span class="ms-1 d-none d-sm-inline">Relatórios</span>
                                </a>
                            </li><!-- Relatórios -->

                            @if(!User.IsInRole("admin")){
                                <li class="nav-item" style="justify-content: center; padding-left: 4.5rem !important">
                                    <a class="nav-link text-truncate" asp-area="" asp-controller="UserManagment" asp-action="Index">
                                        <i class="fs-5 bi-people"></i>
                                        <span class="ms-1 d-none d-sm-inline">Usuários</span>
                                    </a>

                                </li>

                                <!-- Usuários -->
                            }
                            

                            <li class="nav-item" style="justify-content: center; padding-left: 4.5rem !important">
                                <a class="nav-link text-truncate" asp-area="" asp-controller="Equipment" asp-action="Index">
                                    <i class="fs-5 bi-table"></i>
                                    <span class="ms-1 d-none d-sm-inline">Equipamentos</span>
                                </a>
                            </li><!-- Equipamentos -->
                        }
                    }


                </ul>
            </div>
        </div>

        <!-- Conteúdo principal -->
        <div class="container-fluid" id="content-wrap">
            <div class="row">
                <div class="col min-vh-10 no-padding ">
                    <button class="menu-button" onclick="toggleMenu()" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" role="button" style="margin-top: 20px; margin-left: 20px; ">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <main role="main" class="@BodyClass">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>






        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
        @if (ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"])
        {
            <!-- Footer -->
            <footer class="footer bg-dark text-muted">
                <div class="container">
                <div class="row">
                    <div class="col-md-4 pt-3">
                        <h5>Sobre Nós</h5>
                        <p>Nosso sistema de reservas foi projetado para facilitar a organização e gestão de salas de forma eficiente e prática.</p>
                    </div>
                    <div class="col-md-4 pt-3">
                        <h5>Links Úteis</h5>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "Room")" class="text-decoration-none">Reservar Salas</a></li>
                            <li><a href="@Url.Action("Index", "Equipment")" class="text-decoration-none">Equipamentos</a></li>
                            <li><a href="@Url.Action("Privacy", "Home")" class="text-decoration-none">Política de Privacidade</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 pt-3">
                        <h5>Contato</h5>
                        <p>
                            <i class="bi bi-envelope"></i> contato@reservas.com<br />
                            <i class="bi bi-telephone"></i> +55 11 98765-4321<br />
                            <i class="bi bi-geo-alt"></i> Rua da Reserva, 123, São Paulo, SP
                        </p>
                    </div>
                </div>
                <div class="text-center mt-4">
                    &copy; 2024 Sistema de Reserva de Salas. Todos os direitos reservados.
                </div>
            </div>
        </footer>
        }

    </div>
    
</body>
</html>
