<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Reservation.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    
</head>
<body>
    <header>

    </header>
    <div class="offcanvas offcanvas-start w-auto" tabindex="-1" id="offcanvasMenu" data-bs-keyboard="false" data-bs-backdrop="true">
        <div class="offcanvas-header ">
            <h6 class="offcanvas-title d-none d-sm-block" id="offcanvasTitle">Reserva de Salas</h6>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
        </div>
        <div class="offcanvas-body px-0">
            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-start" id="menu" style="padding-left: 50px; padding-right: 50px">
                <!-- Home -->
                <li class="nav-item" style="justify-content: center">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fs-5 bi-house"></i>
                        <span class="ms-1 d-none d-sm-inline" style="justify-content: center">Home</span>
                    </a>
                </li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item d-flex justify-content-center align-items-center">
                        <a class="nav-link text-truncate" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="nav-link text-truncate" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </li>

                }
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link text-truncate ">
                            <i class="fs-5 bi-speedometer2    "></i>
                            <span class="ms-1 d-none d-sm-inline">Conta</span>
                        </a>
                        <!-- Conta -->

                        <div class="collapse" id="submenu1">
                            <ul class="nav flex-column ms-3">


                                <li class="nav-item">
                                    <a class="nav-link text-truncate" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li><!-- Log out -->

                                <li class="nav-item">
                                    <a asp-controller="History" asp-action="Index" class="nav-link text-truncate" >
                                        <span>Histórico</span><!-- Histórico -->
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Reserve" asp-action="UserReserves" class="nav-link text-truncate">
                                        <span>Minhas Reservas</span><!-- Histórico -->
                                    </a>
                                </li>

                            </ul>
                        </div>

                    </li>
                }
                
                <li class="nav-item">
                    <a class="nav-link text-truncate" asp-area="" asp-controller="Room" asp-action="Index">
                        <i class="fs-5 bi-table"></i>
                        <span class="ms-1 d-none d-sm-inline">Salas</span>
                    </a>
                </li><!-- Salas -->
                

                @if (User.Identity.IsAuthenticated){
                    @if (User.IsInRole("general") || User.IsInRole("admin"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-truncate" asp-area="" asp-controller="Report" asp-action="Index">
                                <i class="fs-5 bi-grid"></i>
                                <span class="ms-1 d-none d-sm-inline">Relatórios</span>
                            </a>
                        </li><!-- Relatórios -->

                            
                        <li class="nav-item">
                            <a class="nav-link text-truncate" asp-area="" asp-controller="UserManagment" asp-action="Index">
                                <i class="fs-5 bi-people"></i>
                                <span class="ms-1 d-none d-sm-inline">Usuários</span>
                            </a>

                        </li><!-- Usuários -->
                        
                    <li class="nav-item">
                        <a class="nav-link text-truncate" asp-area="" asp-controller="Equipment" asp-action="Index">
                            <i class="fs-5 bi-table"></i>
                            <span class="ms-1 d-none d-sm-inline">Equipamentos</span>
                        </a>
                    </li><!-- Equipamentos -->
                    }
                }
                
            </ul>
        </div>
    </div>

    <!-- Container Principal -->
    <div class="container-fluid">
        <div class="row">
            <div class="col min-vh-100 py-3">
                <!-- Botão Toggler -->
                <button class="menu-button" onclick="toggleMenu()" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" role="button" >
                    
                    <span></span>
                    <span></span>
                    <span></span>

                </button>
                <!-- Conteúdo -->
                <div>
                    <div class="container">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Reservation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
