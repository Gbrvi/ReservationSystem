@{
}
@if (User.Identity.IsAuthenticated){
                    @if (User.IsInRole("general") || User.IsInRole("admin")){
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Equipamentos</h1>
        <p>
            <a asp-controller="Equipment" asp-action="Create" class="btn btn-primary my-2">Criar Equipamento</a>
            
        </p>
    </div>
</section>

        <div class="album py-5 bg-light rounded-3 shadow-lg">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                            <a asp-controller="Equipment" asp-action="Edit" asp-route-id="@item.EquipmentId" style="text-decoration: none">
                    <div class="card mb-4 box-shadow">
                        
                        <div class="card-body">
                            <p class="card-text"> Equipamento: @item.EquipmentName</p>
                            <p class="card-text"> Preço: @item.EquipmentPrice</p>
                            <p class="card-text"> Quantidade: @item.QuantityAvailable</p>

                            
                            
                        </div>
                    </div>
                            </a>
                </div>
                        
            }
        </div>


    </div>
</div>
}
}