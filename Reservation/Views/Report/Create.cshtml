@{
}


<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ReportTitle" for="ReportTitle">Room Number</label>
        <input asp-for="ReportTitle" type="text" class="form-control" id="ReportTitle" maxlength="10" placeholder="Colque o Título" required>
    </div>

    <div class="form-group">
        <label for="files">Upload de Imagens</label>
        <input asp-for="ReportFiles" type="file" class="form-control" id="files" multiple />
    </div>

    <div class="mb-3">
        <label asp-for="ReportObservation"  for="Observation" class="form-label">Observações</label>
        <textarea asp-for="ReportObservation" class="form-control" id="Observation" rows="3"></textarea>
    </div>

    <div class="form-check form-switch">
        <input asp-for="ReportBanStatus" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label asp-for="ReportBanStatus" class="form-check-label" for="flexSwitchCheckDefault">Passível de BAN</label>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

