@model Room

<div class="container">
    <h1 class="my-4">
        Sala @Model.RoomNumber
        <small>Detalhes</small>
    </h1>

    <div class="row">
        <div class="col-md-8">
            <div id="carouselRoomImages" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.PhotoAlbum.Count; i++)
                    {
                        <li data-target="#carouselRoomImages" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @if (Model.PhotoAlbum.Any())
                    {
                        @for (int i = 0; i < Model.PhotoAlbum.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img class="d-block w-100" src="data:image;base64,@(Convert.ToBase64String(Model.PhotoAlbum[i].ImageData))" alt="Imagem da sala">
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://via.placeholder.com/800x400" alt="No image available">
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselRoomImages" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselRoomImages" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Informações da Sala</h3>
            <p>Preço: @Model.RoomPrice</p>
            <p>Tipo: @Model.RoomType</p>
            <h3 class="my-3">Características</h3>
            <ul>
                <li>Status: @Model.RoomStatus</li>
                <li>Capacidade: @Model.Capacity</li>
                <li>Internet: @(Model.HasInternet ? "Sim" : "Não")</li>
                <li>Ar Condicionado: @(Model.HasAirConditioning ? "Sim" : "Não")</li>
                <li>Câmera de Segurança: @(Model.HasSecurityCamera ? "Sim" : "Não")</li>
                <li>Tamanho: @Model.SizeInSquareMeters m²</li>
            </ul>
        </div>
    </div>
</div>
